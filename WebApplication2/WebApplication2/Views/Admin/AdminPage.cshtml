@{
    ViewData["Title"] = "Admin Page";
    var menuItems = new List<string> { "Home", "Student", "Course", "Teacher", "Enroll", "Logout" };
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/AdminPage.css">
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <h2 class="logo">SIMS</h2>
            <ul class="menu">
                @foreach (var item in menuItems)
                {
                    <li onclick="changeContent('@item')">@item</li>
                }
            </ul>
        </div>

        <!-- Main Content Area -->
        <div class="content-area">
            <h1 id="content-title">Home</h1>
            <p id="content-description">Content Area based on menu selected</p>
        </div>
    </div>
    <script src="~/js/AdminPage.js"></script>
</body>
</html>
