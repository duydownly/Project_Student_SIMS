@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <!-- Link to your CSS file -->
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
</head>
<body>

    <div class="container">
        <div class="left-panel">
            <h2>Log in to your account</h2>
            <p>Welcome! Select method to login:</p>

            <div class="form-switch">
                <button id="studentBtn" class="active">Student</button>
                <button id="teacherBtn">Teacher</button>
                <button id="adminBtn">Admin</button>
            </div>

            <!-- Student Login Form -->
            <form id="studentForm" class="active" method="post" action="/Account/Login">
                <input type="text" name="email" placeholder="Student Username" required>
                <input type="password" name="password" placeholder="Password" required>
                <label><input type="checkbox" name="remember"> Remember password</label>
                <button type="submit" class="login-btn">Login</button>
            </form>

            <!-- Teacher Login Form -->
            <form id="teacherForm" method="post" action="/Account/Login">
                <input type="text" name="email" placeholder="Teacher Username" required>
                <input type="password" name="password" placeholder="Password" required>
                <label><input type="checkbox" name="remember"> Remember password</label>
                <button type="submit" class="login-btn">Login</button>
            </form>

            <!-- Admin Login Form -->
            <form id="adminForm" method="post" action="/Account/Login">
                <input type="text" name="email" placeholder="Admin Username" required>
                <input type="password" name="password" placeholder="Password" required>
                <label><input type="checkbox" name="remember"> Remember password</label>
                <button type="submit" class="login-btn">Login</button>
            </form>
        </div>
        <div class="right-panel">
            <h1>Academic Portal</h1>
        </div>
    </div>

    <!-- Link to your JavaScript file -->
    <script src="~/js/login.js"></script>

</body>
</html>
