@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Sử dụng layout Admin
}

<div class="container mt-5">
    <h2>Options Select</h2>
    <div class="mt-4">
        <!-- Nút StudentEnroll -->
        <a asp-controller="Student_CoursesManagement" asp-action="Index" class="btn btn-primary">
            StudentEnroll
        </a>

        <!-- Nút TeacherEnroll -->
        <a asp-controller="Teacher_CoursesManagement" asp-action="Index" class="btn btn-secondary">
            TeacherEnroll
        </a>
    </div>
</div>

<style>
    .container {
        text-align: center;
    }

    .mt-4 {
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
        margin-right: 15px; /* Khoảng cách giữa các nút */
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: translateY(-2px); /* Hiệu ứng hover: nâng nút lên */
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #495057;
        transform: translateY(-2px); /* Hiệu ứng hover: nâng nút lên */
    }

    .btn:active {
        transform: translateY(1px); /* Hiệu ứng khi nhấn nút */
    }
</style>
