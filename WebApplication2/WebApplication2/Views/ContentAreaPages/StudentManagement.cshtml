@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management</title>
    <link rel="stylesheet" href="~/css/StudentManagement.css" />
</head>
<body>

    <div class="container">
        <div class="left-panel">
            <h2>Student Management</h2>
            <p>Choose an action:</p>

            <!-- Tabs for actions -->
            <div class="form-switch">
                <button id="searchBtn" class="active">Search</button>
                <button id="addBtn">Add</button>
                <button id="editBtn">Edit</button>
            </div>

            <!-- Search Form -->
            <form id="searchForm" class="active">
                <input type="text" placeholder="Enter student ID to search" required>
                <button class="action-btn" type="submit">Search</button>
            </form>

            <!-- Add Form -->
            <form id="addForm">
                <input type="text" placeholder="Student Name" required>
                <input type="email" placeholder="Email" required>
                <input type="text" placeholder="Phone Number" required>
                <input type="text" placeholder="Gender" required>
                <input type="password" placeholder="Password" required>
                <button class="action-btn" type="submit">Add</button>
            </form>

            <!-- Edit Form -->
            <form id="editForm">
                <input type="text" placeholder="Enter student ID to edit" required>
                <button class="action-btn" type="button" id="searchIDBtn">Search ID</button>
                <input type="text" id="editName" placeholder="New Name">
                <input type="email" id="editEmail" placeholder="New Email">
                <input type="text" id="editPhone" placeholder="New Phone Number">
                <input type="text" id="editGender" placeholder="New Gender">
                <input type="password" id="editPassword" placeholder="New Password">
                <button class="action-btn" type="submit">Edit</button>
            </form>
        </div>
    </div>

    <script src="~/js/StudentManagement.js"></script>

</body>
</html>
